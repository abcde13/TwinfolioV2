

<div class = "post_container">
	<div class = "row" id = "post_banner">
		<li id="wrap_left"></li>
		<li id="title_text"><%= link_to post.title, post_path(post) %></li>
		<li id="wrap_right"></li>
	</div>
	<div class = "post_details">
		<% if current_user %>
			<div class = "row">
				<%= link_to 'Edit', edit_post_path(post) %>
			</div>
		<% end %>
			
		<div class = "row">
			<%= post.author %>
		</div>
		<div class = "row">
			<%= post.text %>
		</div>
	</div>
</div>

